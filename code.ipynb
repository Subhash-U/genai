import pandas as pd
import json
import sqlite3
import os

orders_df = pd.read_csv('orders.csv')

with open('users.json', 'r') as f:
    users_data = json.load(f)
users_df = pd.DataFrame(users_data)

conn = sqlite3.connect(':memory:')
with open('restaurants.sql', 'r') as f:
    sql_script = f.read()
conn.executescript(sql_script)
restaurants_df = pd.read_sql_query("SELECT * FROM restaurants", conn)
conn.close()

merged_df = orders_df.merge(users_df, on='user_id', how='left')
final_df = merged_df.merge(restaurants_df, on='restaurant_id', how='left', suffixes=('', '_rest'))
final_df.to_csv('final_food_delivery_dataset.csv', index=False)

gold_revenue = final_df[final_df['membership'] == 'Gold'].groupby('city')['total_amount'].sum().idxmax()
print(gold_revenue)

top_cuisine_avg = final_df.groupby('cuisine')['total_amount'].mean().idxmax()
print(top_cuisine_avg)

user_spending = final_df.groupby('user_id')['total_amount'].sum()
users_above_1000 = (user_spending > 1000).sum()
print(users_above_1000)

bins = [3.0, 3.5, 4.0, 4.5, 5.0]
labels = ['3.0 – 3.5', '3.6 – 4.0', '4.1 – 4.5', '4.6 – 5.0']
final_df['rating_range'] = pd.cut(final_df['rating'], bins=bins, labels=labels, include_lowest=True)
top_rating_range = final_df.groupby('rating_range', observed=False)['total_amount'].sum().idxmax()
print(top_rating_range)

gold_pct = (final_df['membership'] == 'Gold').mean() * 100
print(f"{round(gold_pct)}%")

final_df['order_date'] = pd.to_datetime(final_df['order_date'], format='%d-%m-%Y')
final_df['quarter'] = final_df['order_date'].dt.quarter
top_quarter = final_df.groupby('quarter')['total_amount'].sum().idxmax()
print(f"Q{top_quarter}")